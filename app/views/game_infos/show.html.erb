elsif @game_info.event == '2018秋季入替戦'
  event = '2018年度秋季リーグ戦入替戦'
end
%>

  <h6>
  <%= @game_info.batting_first_team %> vs <%= @game_info.field_first_team %>
  <br>
  <small>
  <%= @game_info.date %> <%= @game_info.stadium %> <%= @game_info.game_number %>
  <br>
  <%= event %> <%= @game_info.round %>
  </small>
  </h6>

<%
team_top = ''
if @game_info.batting_first_team == '東海大学北海道C'
  team_top = '東'
elsif @game_info.batting_first_team == '星槎道都大学'
  team_top = '道'
elsif @game_info.batting_first_team == '北翔大学'
  team_top = '翔'
elsif @game_info.batting_first_team == '北海道大学'
  team_top = '北'
elsif @game_info.batting_first_team == '札幌大学'
  team_top = '札'
elsif @game_info.batting_first_team == '北海学園大学'
  team_top = '学'
elsif @game_info.batting_first_team == '札幌国際大学'
  team_top = '国'
elsif @game_info.batting_first_team == '小樽商科大学'
  team_top = '樽'
elsif @game_info.batting_first_team == '札幌学院大学'
  team_top = '院'
elsif @game_info.batting_first_team == '北海道教育大学岩見沢校'
  team_top = '岩'
elsif @game_info.batting_first_team == '札幌大谷大学'
  team_top = '大'
elsif @game_info.batting_first_team == '北海道教育大学札幌校'
  team_top = '教'
elsif @game_info.batting_first_team == '北海道科学大学'
  team_top = '科'
elsif @game_info.batting_first_team == '北星学園大学'
  team_top = '星'
elsif @game_info.batting_first_team == '酪農学園大学'
  team_top = '酪'
elsif @game_info.batting_first_team == '北海道文教大学'
  team_top = '文'
elsif @game_info.batting_first_team == '北海道情報大学'
  team_top = '情'
elsif @game_info.batting_first_team == '北海道医療大学'
  team_top = '医'
end

team_bottom = ''
if @game_info.field_first_team == '東海大学北海道C'
  team_bottom = '東'
elsif @game_info.field_first_team == '星槎道都大学'
  team_bottom = '道'
elsif @game_info.field_first_team == '北翔大学'
  team_bottom = '翔'
elsif @game_info.field_first_team == '北海道大学'
  team_bottom = '北'
elsif @game_info.field_first_team == '札幌大学'
  team_bottom = '札'
elsif @game_info.field_first_team == '北海学園大学'
  team_bottom = '学'
elsif @game_info.field_first_team == '札幌国際大学'
  team_bottom = '国'
elsif @game_info.field_first_team == '小樽商科大学'
  team_bottom = '樽'
elsif @game_info.field_first_team == '札幌学院大学'
  team_bottom = '院'
elsif @game_info.field_first_team == '北海道教育大学岩見沢校'
  team_bottom = '岩'
elsif @game_info.field_first_team == '札幌大谷大学'
  team_bottom = '大'
elsif @game_info.field_first_team == '北海道教育大学札幌校'
  team_bottom = '教'
elsif @game_info.field_first_team == '北海道科学大学'
  team_bottom = '科'
elsif @game_info.field_first_team == '北星学園大学'
  team_bottom = '星'
elsif @game_info.field_first_team == '酪農学園大学'
  team_bottom = '酪'
elsif @game_info.field_first_team == '北海道文教大学'
  team_bottom = '文'
elsif @game_info.field_first_team == '北海道情報大学'
  team_bottom = '情'
elsif @game_info.field_first_team == '北海道医療大学'
  team_bottom = '医'
end

        calledgame = ""
        sum_top = 0
        sum_bottom = 0
        15.times { |n| 
          str_top = "top" << (n+1).to_s
          str_bottom = "bottom" << (n+1).to_s
          sum_top += @game_info[str_top].to_i
          sum_bottom += @game_info[str_bottom].to_i
        }
%>

<table class="table table-bordered table-condensed text-center" style="margin-bottom: 5px; table-layout: fixed;">
  <tfoot>
    <tr>
      <td></td>
      <td>1</td>
      <td>2</td>
      <td>3</td>
      <td>4</td>
      <td>5</td>
      <td>6</td>
      <td>7</td>
      <td>8</td>
      <td>9</td>
      <% if @game_info.top10 %>
      <td>10</td>
      <% end %>
      <% if @game_info.top11 %>
      <td>11</td>
      <% end %>
      <% if @game_info.top12 %>
      <td>12</td>
      <% end %>
      <td>R</td>
    </tr>

    <tr>
      <td><%= team_top %></td>
      <td><%= @game_info.top1 %></td>
      <td><%= @game_info.top2 %></td>
      <td><%= @game_info.top3 %></td>
      <td><%= @game_info.top4 %></td>
      <td><%= @game_info.top5 %></td>
      <td><%= @game_info.top6 %></td>
      <td><%= @game_info.top7 %></td>
      <td><%= @game_info.top8 %></td>
      <td><%= @game_info.top9 %></td>
      <% if @game_info.top10 %>
      <td><%= @game_info.top10 %></td>
      <% end %>
      <% if @game_info.top11 %>
      <td><%= @game_info.top11 %></td>
      <% end %>
      <% if @game_info.top12 %>
      <td><%= @game_info.top12 %></td>
      <% end %>
      <td><%= sum_top.to_s %></td>
    </tr>

    <tr>
      <td><%= team_bottom %></td>
      <td><%= @game_info.bottom1 %></td>
      <td><%= @game_info.bottom2 %></td>
      <td><%= @game_info.bottom3 %></td>
      <td><%= @game_info.bottom4 %></td>
      <td><%= @game_info.bottom5 %></td>
      <td><%= @game_info.bottom6 %></td>
      <% if !@game_info.bottom7 && @game_info.updatable %>
      <td>x</td>
      <%
      elsif @game_info.bottom7.to_i > 0 && @game_info.updatable && sum_bottom - sum_top >= 7 && !@game_info.top8
        calledgame = "（7回コールド）"
      %>
      <td><%= @game_info.bottom7 %>x</td>
      <% else %>
      <td><%= @game_info.bottom7 %></td>
      <% end %>

      <% if @game_info.top8 %>
        <% if !@game_info.bottom8 && @game_info.updatable %>
        <td>x</td>
        <%
        elsif @game_info.bottom8.to_i > 0 && @game_info.updatable && sum_bottom - sum_top >= 7 && !@game_info.top9
          calledgame = "（8回コールド）"
        %>
        <td><%= @game_info.bottom8 %>x</td>
        <% else %>
        <td><%= @game_info.bottom8 %></td>
        <% end %>
      <% else %>
      <td></td>
      <% end %>

      <% if @game_info.top9 %>
        <% if !@game_info.bottom9 && @game_info.updatable %>
        <td>x</td>
        <% elsif @game_info.bottom9.to_i > 0 && @game_info.updatable && sum_bottom > sum_top && !@game_info.top10 %>
        <td><%= @game_info.bottom9 %>x</td>
        <% else %>
        <td><%= @game_info.bottom9 %></td>
        <% end %>
      <% else %>
      <td></td>
      <% end %>

      <% if @game_info.top10 %>
        <% if !@game_info.bottom10 && @game_info.updatable %>
        <td>x</td>
        <% elsif @game_info.bottom10.to_i > 0 && @game_info.updatable && sum_bottom > sum_top && !@game_info.top11 %>
        <td><%= @game_info.bottom10 %>x</td>
        <% else %>
        <td><%= @game_info.bottom10 %></td>
        <% end %>
      <% end %>

      <% if @game_info.top11 %>
        <% if !@game_info.bottom11 && @game_info.updatable %>
        <td>x</td>
        <% elsif @game_info.bottom11.to_i > 0 && @game_info.updatable && sum_bottom > sum_top && !@game_info.top12 %>
        <td><%= @game_info.bottom11 %>x</td>
        <% else %>
        <td><%= @game_info.bottom11 %></td>
        <% end %>
      <% end %>

      <% if @game_info.top12 %>
        <% if !@game_info.bottom12 && @game_info.updatable %>
        <td>x</td>
        <% elsif @game_info.bottom12.to_i > 0 && @game_info.updatable && sum_bottom > sum_top && !@game_info.top13 %>
        <td><%= @game_info.bottom12 %>x</td>
        <% else %>
        <td><%= @game_info.bottom12 %></td>
        <% end %>
      <% end %>

      <td><%= sum_bottom.to_s %></td>
    </tr>
  </tfoot>
</table>

<% if sum_top == sum_bottom && @game_info.updatable %>
<p>（引き分け）</p>
<% elsif calledgame != "" %>
<p><%= calledgame %></p>
<% end %>

<table class="table table-bordered table-condensed" style="margin-bottom: 5px">
    <tbody>
      <tr>
        <td colspan="2">バッテリー</td>
      </tr>
      <tr>
        <td align="center" style="padding: 0; width: 8.5%;"><%= team_top %></td><td><%= @game_info.pitcher_top %> - <%= @game_info.catcher_top %></td>
      </tr>
      <tr>
        <td align="center" style="padding: 0;"><%= team_bottom %></td><td><%= @game_info.pitcher_bottom %> - <%= @game_info.catcher_bottom %></td>
      </tr>
  </tbody>
</table>

<table class="table table-bordered table-condensed" style="margin-bottom: 5px">
    <tbody>
      <tr>
        <td colspan="2">本塁打</td>
      </tr>
      <tr>
        <td align="center" style="padding: 0; width: 8.5%;"><%= team_top %></td><td><%= @game_info.homerun_top %></td>
      </tr>
      <tr>
        <td align="center" style="padding: 0;"><%= team_bottom %></td><td><%= @game_info.homerun_bottom %></td>
      </tr>
  </tbody>
</table>

<table class="table table-bordered table-condensed" style="margin-bottom: 5px">
    <tbody>
      <tr>
        <td colspan="2">三塁打</td>
      </tr>
      <tr>
        <td align="center" style="padding: 0; width: 8.5%;"><%= team_top %></td><td><%= @game_info.threebase_top %></td>
      </tr>
      <tr>
        <td align="center" style="padding: 0;"><%= team_bottom %></td><td><%= @game_info.threebase_bottom %></td>
      </tr>
  </tbody>
</table>

<table class="table table-bordered table-condensed" style="margin-bottom: 5px">
    <tbody>
      <tr>
        <td colspan="2">二塁打</td>
      </tr>
      <tr>
        <td align="center" style="padding: 0; width: 8.5%;"><%= team_top %></td><td><%= @game_info.twobase_top %></td>
      </tr>
      <tr>
        <td align="center" style="padding: 0;"><%= team_bottom %></td><td><%= @game_info.twobase_bottom %></td>
      </tr>
  </tbody>
</table>

